# Use Debian-based Go image to avoid musl libc compatibility issues with DuckDB
FROM golang:1.25-bookworm

# Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libc6-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy source code
COPY . .

# Set default command
CMD ["/bin/bash"]